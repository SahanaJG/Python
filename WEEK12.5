from collections import OrderedDict

def categorize_books():
    # Initialize an ordered dictionary to store books categorized by genre
    books_by_genre = OrderedDict()

    # Read input until a blank line is encountered or EOFError is raised
    while True:
        try:
            line = input().strip()

            # Check for EOF (end of file) which raises EOFError
            if not line:
                break

            # Split the input line into book title and genre
            title, genre = line.split(',')

            # Remove leading and trailing whitespace from genre
            genre = genre.strip()

            # Add the book title to the corresponding genre list in the ordered dictionary
            if genre in books_by_genre:
                books_by_genre[genre].append(title)
            else:
                books_by_genre[genre] = [title]
        except EOFError:
            break

    return books_by_genre

def print_categorized_books(books_by_genre):
    # Print the categorized books
    for genre, books in books_by_genre.items():
        print(f"{genre}: {', '.join(books)}")

# Categorize the books
books_by_genre = categorize_books()

# Print the categorized books
print_categorized_books(books_by_genre)
