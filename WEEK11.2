def get_number_within_range(min_value, max_value):
    try:
        user_input = input()
        number = int(user_input)
        
        if number < min_value or number > max_value:
            return f"Error: Number out of allowed range"
        else:
            return f"Valid input."
    
    except ValueError:
        return "Error: invalid literal for int()"

def main():
    min_value = 1
    max_value = 100
    
    result = get_number_within_range(min_value, max_value)
    print(result)

if __name__ == "__main__":
    main()
